<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreatWave4"
    android:orientation="vertical"
    android:padding="12dip"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dip"
        android:layout_marginBottom="32dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Programmeur"
        android:textColor="@color/GreatWave2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Programme"
        android:textColor="@color/GreatWave2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Remis"
        android:textColor="@color/GreatWave2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/TP_Professor"
        android:textColor="@color/GreatWave2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Cours"
        android:textColor="@color/GreatWave2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Ecole"
        android:textColor="@color/GreatWave2" />

</LinearLayout>