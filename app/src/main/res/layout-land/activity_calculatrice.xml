<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/EcranPrincipal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/GreatWave2"
    android:orientation="vertical"
    android:padding="20dip"
    tools:context=".CalculatriceActivity">

    <LinearLayout
        android:id="@+id/TbLand1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ecran"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:background="?attr/colorButtonNormal"
            android:fontFamily="@font/display_liquide"
            android:gravity="center"
            android:textColor="@color/GreatWave1"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TbLand2"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonEffacer"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymboleEffacer"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight=".32"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymbolePlus"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TbLand3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonChiffre7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_7"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_8"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_9"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSoustraction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymboleSoustraction"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/TbLand4"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonChiffre4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_4"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_5"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_6"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonMultiplication"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymboleMultiplication"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TbLand5"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonChiffre1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_1"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_2"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonChiffre3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/Chiffre_3"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDivision"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymboleDivision"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TbLand6"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonChiffreZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/ChiffreZero"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPoint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymbolePoint"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonEgal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dip"
            android:layout_weight="0.67"
            android:background="@drawable/button_calculatrice"
            android:text="@string/SymboleEgal"
            android:textColor="@color/GreatWave1"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>